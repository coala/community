[all]
files = *.py, community/**/*.py, gci/**/*.py, activity/*.py
ignore = gci/client.py, gci/migrations/**, private/**
max_line_length = 80
use_spaces = True

[all.whitespace]
use_spaces = True
bears = SpaceConsistencyBear
default_actions = *: ApplyPatchAction

[all.python]
language = Python
bears = QuotesBear
preferred_quotation = '
default_actions = *: ApplyPatchAction

[all.autopep8]
bears = PEP8Bear, PycodestyleBear
default_actions = PEP8Bear: ApplyPatchAction

[all.linelength]
bears = LineLengthBear

[all.links]
bears = InvalidLinkBear

[javascript]
files = static/**/*.js
bears = JSHintBear
allow_unused_variables = True
javascript_strictness = False

[bash]
files = *.sh
bears = ShellCheckBear
shell = bash

[generalization]
# Do not allow the word "coala" to ensure the repository can be generalized out
# for use by other organizations.
files = **
ignore = .git/**, org_name.txt, .coafile, requirements.txt, .travis.yml, LICENSE, public/**, _site/**
bears = KeywordBear
language = python 3
keywords = coala
